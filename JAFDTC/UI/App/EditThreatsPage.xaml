<Page
    x:Class="JAFDTC.UI.App.EditThreatsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JAFDTC.UI.App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <!-- brush for error fields. -->
        <SolidColorBrush x:Key="ErrorFieldBorderBrush" Color="DarkRed"/>
        <SolidColorBrush x:Key="ErrorFieldBackgroundBrush" Color="PaleVioletRed"/>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--
        ===============================================================================================================
        row 0 : header row
        ===============================================================================================================
        -->
        <StackPanel Grid.Row="0" Margin="8,4,8,4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left" VerticalAlignment="Center">

            <!-- Style="{StaticResource NavigationBackButtonSmallStyle}" -->

            <AppBarButton Margin="0,2,0,0" Height="48" x:Name="uiHdrBtnBack"
                          VerticalAlignment="Center"
                          IsEnabled="True"
                          Click="HdrBtnBack_Click"
                          ToolTipService.ToolTip="Return to Configuration List">
                <SymbolIcon Symbol="Back"/>
            </AppBarButton>
            <TextBlock Margin="4,0,0,4" x:Name="uiHdrTxtConfigName"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="SemiBold">
                Threats
            </TextBlock>
        </StackPanel>

        <!--
        ===============================================================================================================
        row 1 : controls
        ===============================================================================================================
        -->
        <Grid Grid.Row="1"
              HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- poi search box -->
            <AutoSuggestBox Grid.Column="0" Width="325" x:Name="uiThreatNameFilterBox"
                            VerticalAlignment="Center"
                            PlaceholderText="Filter threats by display name"
                            QueryIcon="Find"
                            TextChanged="ThreatNameFilterBox_TextChanged"
                            QuerySubmitted="ThreatNameFilterBox_QuerySubmitted"/>

            <!-- command bar -->
            <CommandBar Grid.Column="1" Margin="6,0,0,0"
                        HorizontalAlignment="Left" VerticalAlignment="Center">
                <AppBarToggleButton x:Name="uiBarBtnFilter" Label="Filter Points"
                                    Click="CmdFilter_Click"
                                    ToolTipService.ToolTip="Set filter to apply to threats">
                    <AppBarToggleButton.Icon>
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE71C;"/>
                    </AppBarToggleButton.Icon>
                </AppBarToggleButton>
                <AppBarSeparator/>
                <AppBarButton x:Name="uiBarBtnCopyUser" Label="Copy to User"
                              Click="CmdCopyUser_Click"
                              ToolTipService.ToolTip="Copy selected threats to user threats">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE718;"/>
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton x:Name="uiBarBtnDelete" Icon="Delete" Label="Delete"
                              Click="CmdDelete_Click"
                              ToolTipService.ToolTip="Delete selected user threat"/>
                <AppBarSeparator/>
                <AppBarButton x:Name="uiBarBtnImport" Icon="Download" Label="Import"
                              Click="CmdImport_Click"
                              ToolTipService.ToolTip="Import user threats from file"/>
                <AppBarButton x:Name="uiBarBtnExport" Icon="Upload" Label="Export"
                              Click="CmdExport_Click"
                              ToolTipService.ToolTip="Export user threats to file"/>
            </CommandBar>
        </Grid>

        <!--
        ===============================================================================================================
        row 2 : list and header
        ===============================================================================================================
        -->
        <Grid Grid.Row="2" Margin="0,6,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Margin="16,0,12,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="96"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="2"
                           HorizontalTextAlignment="Center"
                           Style="{StaticResource TableHeaderTextStyle}"
                           Text="Coalition"/>
                <TextBlock Grid.Column="3"
                           HorizontalTextAlignment="Center"
                           Style="{StaticResource TableHeaderTextStyle}"
                           Text="Category"/>
                <TextBlock Grid.Column="4"
                           HorizontalTextAlignment="Left"
                           Style="{StaticResource TableHeaderTextStyle}"
                           Text="Display Name for Threat Ring"/>
                <TextBlock Grid.Column="5"
                           HorizontalTextAlignment="Center"
                           Style="{StaticResource TableHeaderTextStyle}"
                           Text="DCS Type"/>
                <TextBlock Grid.Column="6"
                           HorizontalTextAlignment="Center"
                           Style="{StaticResource TableHeaderTextStyle}"
                           Text="Threat WEZ (nm)"/>
            </Grid>

            <ListView Grid.Row="1" x:Name="uiThreatListView"
                      SelectionMode="Extended"
                      SelectionChanged="ThreatListView_SelectionChanged"
                      RightTapped="ThreatListView_RightTapped"
                      ItemsSource="{x:Bind CurThreatItems}">
                <ListView.Resources>
                    <MenuFlyout x:Name="uiThreatListCtxMenuFlyout">
                        <MenuFlyout.Items>
                            <MenuFlyoutItem Text="Copy to New User Threat..."
                                            Click="CmdCopyUser_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE718;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Export..." Icon="Upload" Click="CmdExport_Click"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Delete" Icon="Delete" Click="CmdDelete_Click"/>
                        </MenuFlyout.Items>
                    </MenuFlyout>
                </ListView.Resources>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:ThreatListItem">
                        <Grid Margin="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="96"/>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       VerticalAlignment="Center"
                                       HorizontalTextAlignment="Center"
                                       FontFamily="Segoe Fluent Icons"
                                       Text="{x:Bind TypeGlyph}"/>
                            <TextBlock Grid.Column="1" Margin="0,0,8,0"
                                       VerticalAlignment="Center"
                                       HorizontalTextAlignment="Center"
                                       FontFamily="Segoe Fluent Icons"
                                       Text="{x:Bind ReplaceGlyph}"/>
                            <TextBlock Grid.Column="2" Margin="16,0,24,0"
                                       VerticalAlignment="Center"
                                       HorizontalTextAlignment="Center"
                                       Text="{x:Bind CoalitionUI}"/>
                            <TextBlock Grid.Column="3" Margin="16,0,24,0"
                                       VerticalAlignment="Center"
                                       HorizontalTextAlignment="Center"
                                       Text="{x:Bind CategoryUI}"/>
                            <TextBlock Grid.Column="4" Margin="6,2,0,0"
                                       HorizontalTextAlignment="Left"
                                       FontSize="16"
                                       FontWeight="Medium"
                                       Text="{x:Bind Threat.Name}"/>
                            <TextBlock Grid.Column="5" Margin="6,0,0,0"
                                       VerticalAlignment="Center"
                                       HorizontalTextAlignment="Center"
                                       Text="{x:Bind Threat.UnitTypeDCS}"/>
                            <TextBlock Grid.Column="6" Margin="6,0,0,0"
                                       VerticalAlignment="Center"
                                       HorizontalTextAlignment="Center"
                                       Text="{x:Bind RadiusWEZUI}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!--
        ===============================================================================================================
        row 3 : Editor
        ===============================================================================================================
        -->
        <Grid Grid.Row="3" Margin="24,12,24,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="125"/>
            </Grid.ColumnDefinitions>

            <!-- editor top row
            -->
            <TextBlock Grid.Row="0" Grid.Column="0" Margin="16,12,0,0"
                       VerticalAlignment="Center"
                       Text="Coalition"/>
            <ComboBox Grid.Row="0" Grid.Column="1" Margin="12,12,0,0" x:Name="uiComboThreatCoalition"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Stretch"
                      SelectionChanged="Combo_SelectionChanged"
                      SelectedIndex="{x:Bind EditThreat.CoalitionUI}">
                <ComboBoxItem>Blue</ComboBoxItem>
                <ComboBoxItem>Red</ComboBoxItem>
                <ComboBoxItem>Neutral</ComboBoxItem>
            </ComboBox>
            <TextBlock Grid.Row="0" Grid.Column="2" Margin="16,12,0,0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Text="Display Name"/>
            <TextBox Grid.Row="0" Grid.Column="3" Margin="12,12,0,0" x:Name="uiTextThreatName"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     TextChanged="ThreatTextBox_TextChanged"
                     LostFocus="ThreatTextBox_LostFocus"
                     Text="{x:Bind EditThreat.Name, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
            <Button Grid.Row="0" Grid.Column="5" Margin="36,12,0,0" x:Name="uiThreatBtnAdd"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    Click="ThreatBtnAdd_Click">
                <TextBlock x:Name="uiThreatTextBtnAdd">
                    Update
                </TextBlock>
            </Button>

            <!-- editor bottom row
            -->
            <TextBlock Grid.Row="1" Grid.Column="0" Margin="16,12,0,0"
                       VerticalAlignment="Center"
                       Text="Category"/>
            <ComboBox Grid.Row="1" Grid.Column="1" Margin="12,12,0,0" x:Name="uiComboThreatCategory"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Stretch"
                      SelectionChanged="Combo_SelectionChanged"
                      SelectedIndex="{x:Bind EditThreat.CategoryUI}">
                <ComboBoxItem>Ground Unit</ComboBoxItem>
                <ComboBoxItem>Naval Unit</ComboBoxItem>
            </ComboBox>
            <TextBlock Grid.Row="1" Grid.Column="2" Margin="24,12,0,0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Text="DCS Type"/>
            <Grid Grid.Row="1" Grid.Column="3" Margin="12,12,0,0"
                  HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="108"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Margin="0,0,0,0" x:Name="uiTextThreatType"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Stretch"
                         TextChanged="ThreatTextBox_TextChanged"
                         LostFocus="ThreatTextBox_LostFocus"
                         Text="{x:Bind EditThreat.TypeDCS, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
                <TextBlock Grid.Column="1" Margin="24,0,0,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Text="WEZ"/>
                <TextBox Grid.Column="3" Margin="12,0,0,0" x:Name="uiTextThreatRadius"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Stretch"
                         PlaceholderText = "0.00"
                         MaxLength="6"
                         TextChanged="ThreatTextBox_TextChanged"
                         LostFocus="ThreatTextBox_LostFocus"
                         Text="{x:Bind EditThreat.RadiusWEZ, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
                <TextBlock Grid.Column="4" Margin="8,0,0,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Text="nm"/>
            </Grid>
            <Button Grid.Row="1" Grid.Column="5" Margin="36,12,0,0" x:Name="uiThreatBtnClear"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    Click="ThreatBtnClear_Click">
                <TextBlock x:Name="uiThreatTextBtnClear">
                    Clear
                </TextBlock>
            </Button>
        </Grid>
    </Grid>
</Page>
